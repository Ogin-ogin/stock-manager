{
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "buildCommand": "pnpm install --no-frozen-lockfile && pnpm run build",
  "installCommand": "npm i -g pnpm@9.8.0 && pnpm install --no-frozen-lockfile",
  "devCommand": "pnpm run dev",
  "settings": {
    "nodeVersion": "18.x"
  },
  "functions": {
    "api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
